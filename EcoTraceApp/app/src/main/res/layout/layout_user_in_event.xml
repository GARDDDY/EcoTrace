<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="15dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/profile_open"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <ImageView
            android:id="@+id/user_img_user_in_event_layout"
            android:layout_width="64dp"
            android:layout_height="64dp"
            tools:srcCompat="@drawable/baseline_person_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/default_PaddingMargin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/username_user_in_event_layout"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="username"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:paddingHorizontal="7dp"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_role_in_event_user_in_event_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:paddingHorizontal="7dp"
                android:text="user role"
                android:textColor="@color/ok_green"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:paddingHorizontal="@dimen/default_PaddingMargin"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_rank_user_in_event_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="user rank"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:paddingHorizontal="7dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/user_experience_user_in_event_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="userExp"
            android:textColor="@color/ok_green"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:paddingHorizontal="7dp"
            android:textStyle="italic" />
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:textAlignment="textEnd"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/outline_more_vert_24" />

</LinearLayout>