<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/default_PaddingMargin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/userPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:paddingHorizontal="@dimen/default_PaddingMargin"
            android:textSize="18sp"
            android:layout_alignParentStart="true"
            android:text="0" />

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:layout_marginHorizontal="@dimen/default_PaddingMargin"
            android:layout_toEndOf="@id/userPlace"
            android:layout_centerVertical="true"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/ok_green"
            android:textSize="20sp"
            android:layout_toEndOf="@id/userImage"
            android:layout_centerVertical="true"
            android:paddingHorizontal="@dimen/default_PaddingMargin"
            android:text="username" />

        <TextView
            android:id="@+id/userExperience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/username"
            android:paddingHorizontal="@dimen/default_PaddingMargin"
            android:gravity="center"
            android:textColor="@color/ok_green"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:layout_marginHorizontal="@dimen/default_PaddingMargin"
            android:text="experience" />


    </RelativeLayout>
</FrameLayout>