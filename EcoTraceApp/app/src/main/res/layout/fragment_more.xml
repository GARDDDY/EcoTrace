<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.more.MoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dirt_white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/my_profile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ok_green"
            android:text="@string/profile"
            android:textColor="@color/dirt_white" />

        <Button
            android:id="@+id/eco_calc_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ok_green"
            android:text="Ecological calculator"
            android:textColor="@color/dirt_white" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ok_green"
            android:text="Сообщения"
            android:textColor="@color/dirt_white" />

        <Button
            android:id="@+id/see_users_button_more_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ok_green"
            android:text="Друзья"
            android:textColor="@color/dirt_white" />

        <Button
            android:id="@+id/see_groups_button_more_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Группы" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Активности"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ok_green"
            android:text="Просмотреть все"
            android:textColor="@color/dirt_white" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ok_green"
            android:text="Создать свою"
            android:textColor="@color/dirt_white" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Настройки"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/apply_user_theme_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ok_green"
            android:text="Apply own color theme"
            android:textColor="@color/dirt_white" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Прочее"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ok_green"
            android:text="Как пользоваться"
            android:textColor="@color/dirt_white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>