<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:foreground="@drawable/bottom_rounded_border"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/groupImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:foreground="#75000000"
            android:scaleType="centerCrop"
            android:background="@color/silver"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/groupImage"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/groupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/default_PaddingMargin"
                android:text="groupName"
                android:textColor="@color/dirt_white"
                android:textStyle="bold"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ok_green"
                android:textSize="18sp"
                android:text="(" />


            <TextView
                android:id="@+id/groupExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pair2Color2"
                android:textSize="18sp"
                android:layout_marginHorizontal="5dp"
                android:text="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ok_green"
                android:textSize="18sp"
                android:text="-" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ok_green"
                android:textSize="18sp"
                android:layout_marginStart="5dp"
                android:text="Уровень" />

            <TextView
                android:id="@+id/groupLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pair2Color2"
                android:textSize="18sp"
                android:layout_marginHorizontal="5dp"
                android:text="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ok_green"
                android:textSize="18sp"
                android:text=")" />
        </LinearLayout>

        <TextView
            android:id="@+id/groupAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/groupImage"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="@dimen/default_PaddingMargin"
            android:text="Lorem ipsum" />
    </RelativeLayout>

