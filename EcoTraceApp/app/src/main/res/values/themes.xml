<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EcoTrace" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ok_green</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/ok_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_no</item>
        <item name="colorSecondaryVariant">@color/silver</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="selectableItemBackground">?attr/selectableItemBackground</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>

        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.EcoTrace" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ok_green</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/ok_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_no</item>
        <item name="colorSecondaryVariant">@color/silver</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="selectableItemBackground">?attr/selectableItemBackground</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>

        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/ok_green</item>
        <item name="textBackground">@color/dirt2_white</item>
        <item name="colorOnPrimary">@color/ok_green</item>
    </style>

    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/ok_green</item>
        <item name="android:textColor">@color/dirt_white</item>
    </style>
    <!-- Base application theme. !!!-->
    <style name="Base.Theme.AppCompat.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ok_green</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/ok_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_no</item>
        <item name="colorSecondaryVariant">@color/silver</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="selectableItemBackground">?attr/selectableItemBackground</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>

        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>


    <style name="Theme.AppCompat.NoActionBar" parent="Base.Theme.AppCompat.NoActionBar" />
</resources>