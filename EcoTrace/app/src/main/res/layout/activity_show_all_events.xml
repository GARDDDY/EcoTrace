<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/dirt_white"
    tools:context=".ui.more.events.ShowAllEventsActivity">

    <android.widget.Toolbar
        android:id="@+id/toolbar6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/allEventsScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_marginHorizontal="@dimen/default_PaddingMargin"
        android:layout_marginVertical="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/userJoinedEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/default_PaddingMargin"
                app:layout_constraintTop_toBottomOf="@+id/eventFinderByName">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/ok_green"
                    android:textSize="18sp"
                    android:text="@string/yourEvents" />

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/silver"
                    android:textSize="14sp"
                    android:text="@string/eventsYouAreIn" />

                <HorizontalScrollView
                    android:scrollbars="none"
                    android:layout_marginTop="@dimen/default_PaddingMargin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/userJoinedEventsLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />
                </HorizontalScrollView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:textColor="@color/ok_green"
                android:text="@string/searchForEvents" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_PaddingMargin">

                <LinearLayout
                    android:id="@+id/allTagsLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/default_PaddingMargin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/startFromTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ems="7"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/silver"
                    android:hint="@string/sinceNow" />

                <LinearLayout
                    android:id="@+id/whenStartReady"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="27sp"
                    android:textColor="@color/ok_green"
                    android:paddingHorizontal="@dimen/default_PaddingMargin"
                    android:text="â”€" />

                <TextView
                    android:id="@+id/endToTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ems="7"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/silver"
                    android:hint="@string/tillTheEnd" />

                <ImageButton
                    android:id="@+id/clearDates"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/transparent"
                    app:tint="@color/ok_green"
                    android:visibility="visible"
                    android:src="@drawable/baseline_cancel_24" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/allEventsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical" />
            <TextView
                android:id="@+id/noEventsWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/noEventsFoundWithSuchTags"
                android:textColor="@color/ok_green"
                android:textAlignment="center"
                android:textSize="18sp"
                android:visibility="gone"/>
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/allEventsLoadingLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:paddingBottom="@dimen/default_PaddingMargin">
                        <RelativeLayout
                            android:id="@+id/rl1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:foreground="@drawable/bottom_rounded_border"
                            android:paddingBottom="@dimen/default_PaddingMargin"
                            android:clipChildren="true"
                            android:clipToPadding="true"
                            android:background="@color/dirt_white"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv1"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:scaleType="centerCrop"
                                android:foreground="@color/silver"
                                tools:srcCompat="@tools:sample/backgrounds/scenic" />
                            <HorizontalScrollView
                                android:id="@+id/hsv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/default_PaddingMargin"
                                android:layout_below="@+id/iv1"
                                android:layout_marginTop="@dimen/default_PaddingMargin">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal" />
                            </HorizontalScrollView>
                            <TextView
                                android:id="@+id/tv2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/hsv"
                                android:foreground="@drawable/layout_loading_shimmer"
                                android:layout_marginTop="@dimen/default_PaddingMargin"
                                android:layout_marginHorizontal="@dimen/default_PaddingMargin"
                                android:text="event-description" />
                            <LinearLayout
                                android:id="@+id/ll2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:layout_below="@+id/tv2"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_marginStart="@dimen/default_PaddingMargin"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginTop="8dp"
                                    android:clickable="true"
                                    android:foreground="@drawable/layout_loading_shimmer"
                                    app:srcCompat="@drawable/baseline_person_24" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:clickable="true"
                                    android:foreground="@drawable/layout_loading_shimmer"
                                    android:text="eventCreator"
                                    android:textSize="15sp" />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/tv4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv2"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginTop="15dp"
                                android:foreground="@drawable/layout_loading_shimmer"
                                android:layout_toEndOf="@+id/tv3"
                                android:drawablePadding="10dp"
                                android:drawableStart="@drawable/baseline_people_24"
                                android:text="-1"
                                android:textSize="15sp" />
                            <TextView
                                android:id="@+id/tv3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv2"
                                android:layout_marginStart="@dimen/default_PaddingMargin"
                                android:layout_marginTop="15dp"
                                android:textSize="15sp"
                                android:foreground="@drawable/layout_loading_shimmer"
                                android:layout_toEndOf="@+id/ll2"
                                android:drawablePadding="10dp"
                                android:drawableStart="@drawable/baseline_access_time_24"
                                android:text="eventStatus" />
                        </RelativeLayout >
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:paddingBottom="@dimen/default_PaddingMargin">
                        <RelativeLayout
                            android:id="@+id/rl12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:foreground="@drawable/bottom_rounded_border"
                            android:paddingBottom="@dimen/default_PaddingMargin"
                            android:clipChildren="true"
                            android:clipToPadding="true"
                            android:background="@color/dirt_white"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv12"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:scaleType="centerCrop"
                                android:foreground="@color/silver"
                                tools:srcCompat="@tools:sample/backgrounds/scenic" />
                            <HorizontalScrollView
                                android:id="@+id/hsv2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/default_PaddingMargin"
                                android:layout_below="@+id/iv12"
                                android:layout_marginTop="@dimen/default_PaddingMargin">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal" />
                            </HorizontalScrollView>
                            <TextView
                                android:id="@+id/tv22"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/hsv2"
                                android:foreground="@drawable/layout_loading_shimmer"
                                android:layout_marginTop="@dimen/default_PaddingMargin"
                                android:layout_marginHorizontal="@dimen/default_PaddingMargin"
                                android:text="event-description" />
                            <LinearLayout
                                android:id="@+id/ll22"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:layout_below="@+id/tv22"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_marginStart="@dimen/default_PaddingMargin"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginTop="8dp"
                                    android:clickable="true"
                                    android:foreground="@drawable/layout_loading_shimmer"
                                    app:srcCompat="@drawable/baseline_person_24" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:clickable="true"
                                    android:foreground="@drawable/layout_loading_shimmer"
                                    android:text="eventCreator"
                                    android:textSize="15sp" />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/tv42"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv22"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginTop="15dp"
                                android:foreground="@drawable/layout_loading_shimmer"
                                android:layout_toEndOf="@+id/tv32"
                                android:drawablePadding="10dp"
                                android:drawableStart="@drawable/baseline_people_24"
                                android:text="-1"
                                android:textSize="15sp" />
                            <TextView
                                android:id="@+id/tv32"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv22"
                                android:layout_marginStart="@dimen/default_PaddingMargin"
                                android:layout_marginTop="15dp"
                                android:textSize="15sp"
                                android:foreground="@drawable/layout_loading_shimmer"
                                android:layout_toEndOf="@+id/ll22"
                                android:drawablePadding="10dp"
                                android:drawableStart="@drawable/baseline_access_time_24"
                                android:text="eventStatus" />
                        </RelativeLayout >
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:paddingBottom="@dimen/default_PaddingMargin">
                        <RelativeLayout
                            android:id="@+id/rl13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:foreground="@drawable/bottom_rounded_border"
                            android:paddingBottom="@dimen/default_PaddingMargin"
                            android:clipChildren="true"
                            android:clipToPadding="true"
                            android:background="@color/dirt_white"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv13"
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:scaleType="centerCrop"
                                android:foreground="@color/silver"
                                tools:srcCompat="@tools:sample/backgrounds/scenic" />
                            <HorizontalScrollView
                                android:id="@+id/hsv3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/default_PaddingMargin"
                                android:layout_below="@+id/iv13"
                                android:layout_marginTop="@dimen/default_PaddingMargin">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal" />
                            </HorizontalScrollView>
                            <TextView
                                android:id="@+id/tv23"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/hsv3"
                                android:foreground="@drawable/layout_loading_shimmer"
                                android:layout_marginTop="@dimen/default_PaddingMargin"
                                android:layout_marginHorizontal="@dimen/default_PaddingMargin"
                                android:text="event-description" />
                            <LinearLayout
                                android:id="@+id/ll23"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:layout_below="@+id/tv23"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_marginStart="@dimen/default_PaddingMargin"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginTop="8dp"
                                    android:clickable="true"
                                    android:foreground="@drawable/layout_loading_shimmer"
                                    app:srcCompat="@drawable/baseline_person_24" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:clickable="true"
                                    android:foreground="@drawable/layout_loading_shimmer"
                                    android:text="eventCreator"
                                    android:textSize="15sp" />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/tv43"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv23"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginTop="15dp"
                                android:foreground="@drawable/layout_loading_shimmer"
                                android:layout_toEndOf="@+id/tv33"
                                android:drawablePadding="10dp"
                                android:drawableStart="@drawable/baseline_people_24"
                                android:text="-1"
                                android:textSize="15sp" />
                            <TextView
                                android:id="@+id/tv33"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv23"
                                android:layout_marginStart="@dimen/default_PaddingMargin"
                                android:layout_marginTop="15dp"
                                android:textSize="15sp"
                                android:foreground="@drawable/layout_loading_shimmer"
                                android:layout_toEndOf="@+id/ll23"
                                android:drawablePadding="10dp"
                                android:drawableStart="@drawable/baseline_access_time_24"
                                android:text="eventStatus" />
                        </RelativeLayout >
                    </FrameLayout>

                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_PaddingMargin"
        android:backgroundTint="@color/ok_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>