<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EcoTraceColors" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/ok_green</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorControlNormal">@color/black</item>
        <item name="colorSecondary">@color/ok_green</item>
        <item name="colorSecondaryVariant">@color/red_no</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.EcoTraceColors" parent="Base.Theme.AppCompat.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/ok_green</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/ok_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_no</item>
        <item name="colorSecondaryVariant">@color/silver</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="selectableItemBackground">?attr/selectableItemBackground</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dirt_white</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>
</resources>